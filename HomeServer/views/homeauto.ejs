<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Home Automation</title>
    <!-- Latest compiled and minified CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" rel="stylesheet">
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-switch/3.3.2/css/bootstrap3/bootstrap-switch.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-2.1.4.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-switch/3.3.2/js/bootstrap-switch.min.js"></script>

    <style>
        body 		{ word-wrap:break-word; }
    </style>
</head>
<body>

<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-cloud"></span> Home Automation</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> User</h3>
                <strong>name</strong>: <%= user.name %><br>
                <strong>temperature</strong>: <%= temperature %><br>
                <strong>humidity</strong>: <%= humidity %><br>
            </div>
        </div>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
              <h3><span class="fa fa-gears"></span> Boiler</h3>
	      <input type="checkbox" name="boiler-switch" data-size="small">
            </div>
        </div>
    </div>
</div>

<script>
  $("[name='boiler-switch']").bootstrapSwitch({
  'state': <%- JSON.stringify(boilerState) %>,
  onSwitchChange: function (event, state) {
  console.log('boiler-switch : ' + state);

  var xhttp = new XMLHttpRequest();
  xhttp.onreadystatechange = function () {
  if (xhttp.readyState == 4 && xhttp.status == 200) {
  }
  };
  xhttp.open("POST", state === true ? "/api/boilerOn" : "/api/boilerOff", true);
  xhttp.send();
  }
  });
</script>
</body>
</html>
